<div class="form-group {{#if errors}} has-error has-feedback {{/if}}">
    <label for="{{id}}">
        <input id="{{id}}" name="{{name}}" type="checkbox" {{#if required}}required{{/if}}>
        {{label}}
    </label> 
    {{#if help_text}}
        <p class="help-block">{{ help_text }}</p>
    {{/if}}
    {{#if errors}}
        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
        <span class='text-danger'>{{errors}}</span>
    {{/if}}
</div>