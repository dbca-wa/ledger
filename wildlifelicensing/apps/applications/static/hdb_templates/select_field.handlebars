<div class="form-group {{#if errors}} has-error has-feedback {{/if}}">
    <label for="{{id}}">{{label}} </label>
    <select id="{{id}}" name="{{name}}" class="form-control" {{#if required}}required{{/if}}>
        {{#each options}}
            <option value="{{this.value}}" class="form-control">{{this.label}}</option>
        {{/each}}
    </select>
    {{#if help_text}}
        <p class="help-block">{{help_text}}</p>
    {{/if}}
</div>